.sidebar {
  position: fixed !important;
  min-height: 100vh !important;
  height: auto !important;
  top: 0 !important;
  left: 0 !important;
  overflow-y: auto !important;
  padding-bottom: 150px !important;
  background-color: #ffffff !important;
  z-index: 9999 !important;
}

.site-author-image {
  display: block !important;
  width: 96px !important;
  height: 96px !important;

// 友链卡片样式
.friends-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  padding: 20px;
}

.friend-item {
  text-align: center;
  width: 200px;
}

.friend-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
  object-fit: cover;
}

.friend-link {
  color: #333;
  text-decoration: none;
  display: block;
  margin: 5px 0;
}

.friend-note {
  color: #666;
  font-size: 14px;
  margin: 5px 0;
}
